@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <h1>Add a Dish</h1>
    <a href = "/">Home</a>
    <hr>
    <form asp-action="ProcessDish" asp-controller="Chef" method="post">
        <span class="text-danger" asp-validation-for="DishName"></span>
        <label asp-for="DishName">Dish Name</label>
        <input asp-for="DishName">
        <br>
        <br>
        <span class="text-danger" asp-validation-for="Calories"></span>
        <label asp-for="Calories"># of Calories</label>
        <input asp-for="Calories">
        <br>
        <br>
        <span class="text-danger" asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness">Tastiness</label>
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <br>
        <br>
        <span class="text-danger" asp-validation-for="Desc"></span>
        <label asp-for="Desc">Desc</label>
        <textarea asp-for="Desc"></textarea>
        <br>
        <br>
        <label>Chef</label>
        <!-- this asp-for take the foreign key ChefId -->
        <select asp-for="ChefId"> 
            @{
                foreach(var chef in @ViewBag.allchefs){
                    <option value="@chef.ChefId">@chef.FirstName</option>
                }
            }
        </select>
        <br>
        <br>
        <input value = "Add Dish" type = "submit">
    </form>
</body>
</html>
